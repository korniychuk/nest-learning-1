{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@app/*": ["./src/*"],
      "@common/*": ["./src/common/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
